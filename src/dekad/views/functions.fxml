<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dekad.controllers.FunctionController"
      prefHeight="975" prefWidth="520">

    <Text fx:id="invalidText" text="Invalid syntax" visible="false" style="-fx-text-fill: red">
        <VBox.margin>
            <Insets right="30" left="30" top="30" bottom="30"/>
        </VBox.margin>
    </Text>

    <TextField fx:id="functionField" text="cos(x)" onAction="#append">
        <VBox.margin>
            <Insets right="30" left="30" top="30" bottom="30"/>
        </VBox.margin>
    </TextField>

    <Button onAction="#append" text="Plot" prefWidth="2000">
        <VBox.margin>
            <Insets right="30" left="30" top="30" bottom="30"/>
        </VBox.margin>
    </Button>

</VBox>
